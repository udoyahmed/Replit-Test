<body>
    <div class="search-container">
        <form action="/submit" method="POST">
            <input type="text" name="id" class="search-input" placeholder="Enter your Student ID" required>
            <button type="submit" class="submit-button">Search</button>
        </form>
    </div>
    <div class="result-container">
        <% if(locals.id){ %>
            <h1>Name: <%=name%></h1>
            <h2>Merit: <%=merit%></h2>
            <h2>Student ID: <%=id%></h2>
            <p class="email">Email: <%=email%></p>
        <% } else { %>
            <h1>Please enter a Student ID</h1>
            <h2>For Buet Mecha:</h2>
            <h2>ID Range: 2310001 to 2310180</h3>
            <p class="not-found">If not found, ask admin to update your details.</p>
        <% } %>
    </div>



